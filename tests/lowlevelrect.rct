
package sys;

var someInt <- 10;
var somePtr <- ref someInt;

// print pointer value
sys::Print(string(deref somePtr));

// change source
someInt <- 500;

// print pointer value again
sys::Print(string(deref somePtr));

// change source
someInt <- 70;

// dereference by using the array syntax
sys::Print(string(somePtr[0]));

// change source using the pointer
somePtr[0] <- 12;

// print int value
sys::Print(string(someInt));
