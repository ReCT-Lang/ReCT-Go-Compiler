set lastWidth <- 0;
set lastHeight <- 0;

while (true)
{
	if (lastWidth != GetSizeX()) 
	{
		lastWidth <- GetSizeX()
		Print("Width: " + string(lastWidth) + "; Height: " + string(lastHeight));
	}

	if (lastHeight != GetSizeY()) 
	{
		lastHeight <- GetSizeY()
		Print("Width: " + string(lastWidth) + "; Height: " + string(lastHeight));
	}

	Sleep(100);
}